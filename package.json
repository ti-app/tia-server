{
  "name": "tia-server",
  "version": "1.0.0",
  "description": "API server for TIA",
  "main": "build/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node --inspect build/index.js",
    "dev": "nodemon src/index.ts",
    "lint": "eslint **/*.js,.ts --ignore-path .gitignore --ignore-pattern internals/scripts",
    "test": "cross-env NODE_ENV=test jest --watch",
    "prettier:fix": "prettier --write src/**/*.{ts,json,md}",
    "tslint:fix": "tslint --fix",
    "promote": "node src/api/utils/make-moderator.js",
    "build": "rm -rf build && cross-env NODE_ENV=production tsc",
    "start:prod": "cross-env NODE_ENV=production node build/index.js"
  },
  "devDependencies": {
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/dotenv-safe": "^5.0.3",
    "@types/eslint": "^6.1.2",
    "@types/express": "^4.17.1",
    "@types/express-session": "^1.15.15",
    "@types/formidable": "^1.0.31",
    "@types/helmet": "^0.0.44",
    "@types/jest": "^24.0.21",
    "@types/joi": "^14.3.3",
    "@types/module-alias": "^2.0.0",
    "@types/mongodb": "^3.3.6",
    "@types/morgan": "^1.7.37",
    "@types/multer": "^1.3.10",
    "@types/node": "^12.11.1",
    "@types/prettier": "^1.18.3",
    "@types/session-file-store": "^1.2.1",
    "@types/supertest": "^2.0.8",
    "@types/tmp": "0.1.0",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "nodemon": "^1.19.3",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "ts-node-dev": "^1.0.0-pre.43",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "@firebase/storage": "^0.2.9",
    "@google-cloud/storage": "^2.4.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.1.0",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "express-validation": "^1.0.3",
    "express-winston": "^4.0.1",
    "firebase": "^7.2.0",
    "firebase-admin": "^8.6.0",
    "formidable": "^1.2.1",
    "helmet": "^3.21.1",
    "http-status": "^1.4.0",
    "joi": "^14.3.1",
    "module-alias": "^2.2.2",
    "mongodb": "^3.3.2",
    "multer": "^1.4.2",
    "session-file-store": "^1.3.1",
    "tmp": "0.1.0",
    "tsoa": "^2.5.7",
    "winston": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,json,md}": [
      "npm run prettier:fix",
      "git add"
    ]
  }
}
