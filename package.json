{
  "name": "tia-server",
  "version": "1.0.0",
  "description": "API server for TIA",
  "main": "src/index.js",
  "scripts": {
    "start": "nodemon ./src/index.js",
    "lint": "eslint **/*.js --ignore-path .gitignore --ignore-pattern internals/scripts",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 20000 --recursive src/api/tests",
    "prettier:fix": "prettier --write src/**/*.{ts,json,less,css,md}",
    "tslint:fix": "tslint --fix"
  },
  "devDependencies": {
    "chai": "^4.1.0",
    "eslint": "^4.2.0",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-plugin-import": "^2.2.0",
    "husky": "^1.1.4",
    "lint-staged": "^8.0.5",
    "mocha": "^3.3.0",
    "nodemon": "^1.11.0",
    "pm2": "^2.10.4",
    "prettier": "^1.15.2"
  },
  "dependencies": {
    "@firebase/storage": "^0.2.9",
    "compression": "^1.7.2",
    "cors": "^2.8.4",
    "dotenv-safe": "^5.0.1",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "express-validation": "^1.0.2",
    "firebase": "^5.8.5",
    "firebase-admin": "^6.1.0",
    "helmet": "^3.12.0",
    "http-status": "^1.0.1",
    "joi": "^13.2.0",
    "moment": "^2.22.1",
    "mongodb": "^3.1.10",
    "morgan": "^1.9.0",
    "session-file-store": "^1.2.0",
    "tmp": "0.0.33",
    "winston": "^2.4.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,json,md}": [
      "npm run prettier:fix",
      "git add"
    ]
  }
}
